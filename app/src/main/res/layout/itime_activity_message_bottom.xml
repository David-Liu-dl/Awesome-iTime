<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="messageViewGroup"
            type="org.unimelb.itime.ui.viewmodel.activity.ActivityMessageViewModel"/>
    </data>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="37dp"
    android:background="@color/whiteFive"
    android:onClick="@{() -> messageViewGroup.onClickViewMore()}">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_meeting_show_more"
        android:layout_centerInParent="true"
        android:textSize="14sp"
        android:textColor="@color/deepSkyBlue"/>
</RelativeLayout>
</layout>
