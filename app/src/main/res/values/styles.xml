<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ItimeRelativeCell">
        <item name="android:layout_height">54dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="ItimeCellLeftIcon">
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="itimeCellTitle">
        <item name="android:layout_height">19dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">157dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/cell_name</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginStart">45dp</item>
    </style>

    <style name="itimeCellEdit" parent="itimeCellTitle">
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="itimeCellRightContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/pinkishGrey</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_marginEnd">28dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="ItimeDisclosure">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:background">@drawable/icon_event_disclosure</item>
    </style>

</resources>
